{
  "name": "Svelte PWA Dev",
  "image": "oven/bun",  // Bun's official Docker image
  "postCreateCommand": "bun install",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "workspaceFolder": "/workspace"
}
